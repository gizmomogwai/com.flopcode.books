<!DOCTYPE html>
<html>
  <head>
    <title>Books</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="navigation">
      <% if @user %>
      <%= link_to 'profile', user_path(@user.id) %>
      <%= link_to 'books', books_path %>
      <% if @user&.admin %>
      <%= link_to 'users', users_path %>
      <% end %>
      <%= link_to 'logout', logout_path %>
      <% else %>
      <%= link_to 'login', login_path %>
      <% end %>
    </div>
    <hr />
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, :class => "flash #{key}") %>
    <% end %>

    <%= yield %>
    <hr />
    <a href="https://github.com/gizmomogwai/com.flopcode.books/commit/<%= APP_VERSION %>">com.flopcode.books (<%= APP_VERSION%>)</a> | <a href="https://github.com/gizmomogwai/com.flopcode.books/issues">issues</a>
  </body>
</html>
