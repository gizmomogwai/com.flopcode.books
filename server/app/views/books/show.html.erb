<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <%= @book.id %>
</p>
<p>
  <strong>ISBN:</strong>
  <%= @book.isbn %>
</p>
<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Authors:</strong>
  <%= @book.authors %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @book.user&.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @book.location&.name %>
</p>

<p>
  <strong>Checkouts:</strong>
  <table>
    <tr>
      <th>User</th>
      <th>from</th>
      <th>to</th>
    </tr>
    <% @book.checkouts.each do |checkout| %>
    <tr>
      <td><%= checkout.user.name %></td>
      <td><%= datetime_for_ui(checkout.from) %></td>
      <td><%= datetime_for_ui(checkout.to) %></td>
    </tr>
    <% end %>
  </table>
</p>
<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
